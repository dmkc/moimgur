<widget xmlns:rim="http://www.blackberry.com/ns/widgets" id="moimgur" 
        version="1.0.1" rim:header="RIM-Widget:rim/widget" 
        xmlns="http://www.w3.org/ns/widgets">
    <rim:navigation mode="focus" />
    <name>moimgur</name>
    <description>Imgur uploader for BlackBerry</description>

    <author href="https://github.com/dmkc">Dmitry Kichenko</author>
    <icon src="images/icon.png" />

    <content src="http://169.254.0.2:8000/index.htm" />
    <access uri="http://169.254.0.2" subdomains="true" />

    <!-- Allowing access to just 'file:///*' doesn't seem to cut 
         it for local files -->
    <access  uri="*" subdomains="true" />
    <access  uri="https://api.imgur.com" subdomains="true" />
    <feature id="blackberry.invoked" version="1.0.0" required="true" />
    <feature id="blackberry.invoke"  version="1.0.0" required="true" />
    <feature id="blackberry.io"   required="true" />
    <feature id="blackberry.io.file"   required="true" />
    <feature id="blackberry.app"  required="true" />

    <rim:permissions>
        <rim:permit>access_shared</rim:permit>
    </rim:permissions>

    <!-- Allow the app to be shared into -->
    <rim:invoke-target id="in.ohnotaga.moimgur.app">
        <type>APPLICATION</type>
        <filter>
            <action>bb.action.SHARE</action>
            <mime-type>image/*</mime-type>
            <property var="uris" value="file://,data://local,http://"/>
        </filter>
    </rim:invoke-target>
    <rim:invoke-target id="in.ohnotaga.moimgur.viewer">
        <type>VIEWER</type>
        <filter>
            <action>bb.action.SHARE</action>
            <mime-type>image/*</mime-type>
            <property var="uris" value="file://,data://local"/>
        </filter>
    </rim:invoke-target>
    
</widget>
